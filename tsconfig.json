{
  "compilerOptions": {
    "lib": ["es6", "dom"],
    "sourceMap": true,
    "declaration": true,
    "outDir": "./lib",
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "removeComments": false,
    "strict": true
  },
  "include": [
    "./src/**/*.ts"
  ],
  "exclude": [
    "./node_modules/",
    "./lib/",
    "./test/",
    "./**/*.spec.ts"
  ]
}
